          TargetType="{x:Type xcdg:HierarchicalGroupByControl}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1HierarchicalGroupByControlStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:HierarchicalGroupByItem}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:HierarchicalGroupByItem}"
