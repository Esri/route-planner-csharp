          TargetType="{x:Type xcdg:InsertionRow}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1InsertionRowStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:ColumnManagerRow}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:ColumnManagerRow}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1ColumnManagerRowStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:StatRow}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:StatRow}"
          BasedOn="{StaticResource tableViewAeroNormalColorStatRowStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:Cell}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:Cell}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1CellStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:DataCell}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:DataCell}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1DataCellStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:InsertionCell}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:InsertionCell}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1InsertionCellStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:ColumnManagerCell}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:ColumnManagerCell}"
          BasedOn="{StaticResource tableViewAeroNormalColorColumnManagerCellStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:StatCell}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:StatCell}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1StatCellStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:GroupByControl}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:GroupByControl}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1GroupByControlStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:GroupByItem}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:GroupByItem}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1GroupByItemStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:GroupHeaderControl}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:GroupHeaderControl}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1GroupHeaderControlStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:GroupLevelIndicator}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:GroupLevelIndicator}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1GroupLevelIndicatorStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:DetailIndicator}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:DetailIndicator}"
