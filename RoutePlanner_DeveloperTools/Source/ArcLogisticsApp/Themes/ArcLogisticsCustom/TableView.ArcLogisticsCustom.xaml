          TargetType="{x:Type xcdg:GroupLevelIndicatorPane}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1GroupLevelIndicatorPaneStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:HierarchicalGroupLevelIndicatorPane}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:HierarchicalGroupLevelIndicatorPane}"
          BasedOn="{StaticResource tableViewXceedDataGridTheme1HierarchicalGroupLevelIndicatorPaneStyle}"/>

    <Style x:Key="{xcdg:ThemeKey TargetElementType={x:Type xcdg:AutoFilterControl}, TargetViewType={x:Type xcdg:TableView}, ThemeType={x:Type local:ArcLogisticsCustomTheme}}"
          TargetType="{x:Type xcdg:AutoFilterControl}"
