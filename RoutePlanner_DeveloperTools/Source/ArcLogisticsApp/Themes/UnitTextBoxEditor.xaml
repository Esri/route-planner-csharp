<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ESRI.ArcLogistics.App.Controls"
    xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid">

    <Style TargetType="{x:Type controls:UnitTextBoxEditor}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:UnitTextBoxEditor}">
                    <Grid Margin="1">
                        <xcdg:NumericTextBox Name="PART_TextBox"
                              xcdg:DataCell.IsCellFocusScope="True"
                              VerticalAlignment="Stretch"
                              Margin="-4,-2,0,0" 
                              Padding="1"
                              BorderThickness="0"
                              AutoSelectBehavior="OnFocus"
                              AutoMoveFocus="True"
                              Background="Transparent"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
